name: Deploy

on:
  push:
    branches: [ "main" ]
  workflow_dispatch: {}

permissions:
  issues: write
  contents: read

jobs:
  # -----------------------------
  # SHARED ENVIRONMENT
  # -----------------------------
  plan-shared:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: terraform
    steps:
      - uses: actions/checkout@v4
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1
      - uses: hashicorp/setup-terraform@v3
      - run: terraform init
      - run: terraform plan -out=tfplan
      - name: Upload tfplan
        uses: actions/upload-artifact@v4
        with:
          name: shared-tfplan
          path: terraform/tfplan

  approve-shared-apply:
    needs: plan-shared
    runs-on: ubuntu-latest
    steps:
      - name: Approve before apply (shared)
        uses: trstringer/manual-approval@v1
        with:
          secret: ${{ github.token }}
          approvers: mostafasookar
          minimum-approvals: 1
          issue-title: "Approve shared apply"

  apply-shared:
    needs: approve-shared-apply
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: terraform
    steps:
      - uses: actions/checkout@v4
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1
      - uses: hashicorp/setup-terraform@v3
      - name: Download tfplan
        uses: actions/download-artifact@v4
        with:
          name: shared-tfplan
          path: terraform
      - run: terraform init
      - run: terraform apply -auto-approve tfplan

  # -----------------------------
  # PGADMIN ENVIRONMENT
  # -----------------------------
  plan-pgadmin:
    needs: apply-shared
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: pgadmin
    env:
      TF_VAR_pgadmin_email: ${{ secrets.PGADMIN_EMAIL }}
      TF_VAR_pgadmin_password: ${{ secrets.PGADMIN_PASSWORD }}
      TF_VAR_alert_email: ${{ secrets.ALERT_EMAIL }}
    steps:
      - uses: actions/checkout@v4
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1
      - uses: hashicorp/setup-terraform@v3
      - run: terraform init
      - run: terraform plan -out=tfplan
      - name: Upload tfplan
        uses: actions/upload-artifact@v4
        with:
          name: pgadmin-tfplan
          path: pgadmin/tfplan

  approve-pgadmin-apply:
    needs: plan-pgadmin
    runs-on: ubuntu-latest
    steps:
      - name: Approve before apply (pgadmin)
        uses: trstringer/manual-approval@v1
        with:
          secret: ${{ github.token }}
          approvers: mostafasookar
          minimum-approvals: 1
          issue-title: "Approve pgadmin apply"

  apply-pgadmin:
    needs: approve-pgadmin-apply
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: pgadmin
    env:
      TF_VAR_pgadmin_email: ${{ secrets.PGADMIN_EMAIL }}
      TF_VAR_pgadmin_password: ${{ secrets.PGADMIN_PASSWORD }}
      TF_VAR_alert_email: ${{ secrets.ALERT_EMAIL }}
    steps:
      - uses: actions/checkout@v4
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1
      - uses: hashicorp/setup-terraform@v3
      - name: Download tfplan
        uses: actions/download-artifact@v4
        with:
          name: pgadmin-tfplan
          path: pgadmin
      - run: terraform init
      - run: terraform apply -auto-approve tfplan

  # -----------------------------
  # MARQUEZ ENVIRONMENT
  # -----------------------------
  plan-marquez:
    needs: apply-pgadmin
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: marquez
    env:
      TF_VAR_marquez_db_user:     ${{ secrets.MARQUEZ_DB_USER }}
      TF_VAR_marquez_db_password: ${{ secrets.MARQUEZ_DB_PASSWORD }}
      TF_VAR_marquez_db_name:     ${{ vars.MARQUEZ_DB_NAME }}
    steps:
      - uses: actions/checkout@v4
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1
      - uses: hashicorp/setup-terraform@v3
      - run: terraform init
      - run: terraform plan -out=tfplan
      - name: Upload tfplan
        uses: actions/upload-artifact@v4
        with:
          name: marquez-tfplan
          path: marquez/tfplan

  approve-marquez-apply:
    needs: plan-marquez
    runs-on: ubuntu-latest
    steps:
      - name: Approve before apply (marquez)
        uses: trstringer/manual-approval@v1
        with:
          secret: ${{ github.token }}
          approvers: mostafasookar
          minimum-approvals: 1
          issue-title: "Approve marquez apply"

  apply-marquez:
    needs: approve-marquez-apply
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: marquez
    env:
      TF_VAR_marquez_db_user:     ${{ secrets.MARQUEZ_DB_USER }}
      TF_VAR_marquez_db_password: ${{ secrets.MARQUEZ_DB_PASSWORD }}
      TF_VAR_marquez_db_name:     ${{ vars.MARQUEZ_DB_NAME }}
    steps:
      - uses: actions/checkout@v4
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1
      - uses: hashicorp/setup-terraform@v3
      - name: Download tfplan
        uses: actions/download-artifact@v4
        with:
          name: marquez-tfplan
          path: marquez
      - run: terraform init
      - run: terraform apply -auto-approve tfplan
